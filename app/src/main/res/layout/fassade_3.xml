<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout for the main body of screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rathaus"
        tools:context=".MainActivity">

        <!--Vertical  guidelines  -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.336" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.41" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.47" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.545" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.61" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.68" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.74" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_X10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.81" />

        <!-- horizontal guidelines  -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.57" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.48" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.41" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_Y8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.365" />



        <!-- Buttons-->


        <Button
            android:id="@+id/button1"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y1"
            app:layout_constraintEnd_toEndOf="@id/guideline_X2"
            app:layout_constraintStart_toStartOf="@id/guideline_X1"
            app:layout_constraintTop_toTopOf="@id/guideline_Y2"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button2"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y1"
            app:layout_constraintEnd_toEndOf="@id/guideline_X4"
            app:layout_constraintStart_toStartOf="@id/guideline_X3"
            app:layout_constraintTop_toTopOf="@id/guideline_Y2"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button3"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y1"
            app:layout_constraintEnd_toEndOf="@id/guideline_X8"
            app:layout_constraintStart_toStartOf="@id/guideline_X7"
            app:layout_constraintTop_toTopOf="@id/guideline_Y2"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button4"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y1"
            app:layout_constraintEnd_toEndOf="@id/guideline_X10"
            app:layout_constraintStart_toStartOf="@id/guideline_X9"
            app:layout_constraintTop_toTopOf="@id/guideline_Y2"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button5"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y3"
            app:layout_constraintEnd_toEndOf="@id/guideline_X4"
            app:layout_constraintStart_toStartOf="@id/guideline_X3"
            app:layout_constraintTop_toTopOf="@id/guideline_Y4"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button6"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y3"
            app:layout_constraintEnd_toEndOf="@id/guideline_X8"
            app:layout_constraintStart_toStartOf="@id/guideline_X7"
            app:layout_constraintTop_toTopOf="@id/guideline_Y4"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/button7"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y5"
            app:layout_constraintTop_toTopOf="@id/guideline_Y6"
            app:layout_constraintEnd_toEndOf="@id/guideline_X4"
            app:layout_constraintStart_toStartOf="@id/guideline_X3"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button8"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y5"
            app:layout_constraintTop_toTopOf="@id/guideline_Y6"
            app:layout_constraintEnd_toEndOf="@id/guideline_X8"
            app:layout_constraintStart_toStartOf="@id/guideline_X7"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/button9"
            style="@style/windowbutton_style"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@id/guideline_Y7"
            app:layout_constraintTop_toTopOf="@id/guideline_Y8"
            app:layout_constraintEnd_toEndOf="@id/guideline_X6"
            app:layout_constraintStart_toStartOf="@id/guideline_X5"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />



        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/einstellungen" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="14dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/edit_mode" />

        <ImageButton
            android:id="@+id/change_fassade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_change_circle_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>