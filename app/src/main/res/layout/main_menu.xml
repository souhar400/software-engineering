<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal">

    <ImageButton
        android:id="@+id/Einstellungen"
        android:layout_width="72dp"
        android:layout_height="58dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_black_36dp" />

    <ImageButton
        android:id="@+id/BPM"
        android:layout_width="72dp"
        android:layout_height="58dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/metronome_1_" />

    <ImageButton
        android:id="@+id/Abspielen"
        android:layout_width="72dp"
        android:layout_height="58dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play_arrow_black_36dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/volumeSlider2"
        android:layout_width="460dp"
        android:layout_height="46dp"
        android:stepSize="1.0"
        android:theme="@style/sliderTheme"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <ImageButton
        android:id="@+id/SoundIcon"
        android:layout_width="72dp"
        android:layout_height="58dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volume_up_black_36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>