<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal">

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="31dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageButton
        android:id="@+id/Einstellungen"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_black_36dp" />

    <TextView
        android:id="@+id/EinstellungenTag"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginStart="152dp"
        android:gravity="center"
        android:text="Einstellungen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slider3"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/AufnahmenTag"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginStart="324dp"
        android:gravity="center"
        android:text="Aufnahmen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slider3"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/TaktTag"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginStart="488dp"
        android:gravity="center"
        android:text="Takt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slider3"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <ImageButton
        android:id="@+id/Takt"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/metronome_1_" />

    <ImageButton
        android:id="@+id/Aufnahmen"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/button_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/queue_music_black_36dp" />

    <TextView
        android:id="@+id/volumeTag"
        android:layout_width="82dp"
        android:layout_height="33dp"
        android:layout_marginStart="44dp"
        android:gravity="center"
        android:text="Volume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/slider3"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <ImageButton
        android:id="@+id/SoundIcon"
        android:layout_width="72dp"
        android:layout_height="58dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volume_up_black_36dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/volumeSlider2"
        android:layout_width="460dp"
        android:layout_height="46dp"
        android:stepSize="1.0"
        android:theme="@style/sliderTheme"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <ImageView
        android:id="@+id/Barrier"
        android:layout_width="725dp"
        android:layout_height="wrap_content"
        android:background="#8C000000"
        android:backgroundTint="#8C000000"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/divider_horizontal_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705" />

</androidx.constraintlayout.widget.ConstraintLayout>