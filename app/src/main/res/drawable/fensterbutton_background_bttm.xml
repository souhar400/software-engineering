<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the line -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape>
            <solid android:color="#988BC34A"></solid>
            <corners
                android:radius="6dip" />

        </shape>
    </item>
    <!-- This is the main color -->
    <item
        android:top="-3dp" android:right="0dp" android:left="0dp" android:bottom="0dp">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/white"></stroke>>
            <corners android:radius="4dip"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <item
        android:top="3dp"
        android:width="40dp"
        android:height="40dp"
        android:gravity="center" />
</layer-list>