<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the line -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="@color/fenster_color_green"></solid>
            <corners android:radius="4dip" />

        </shape>
    </item>
    <!-- This is the main color -->
    <item
        android:top="0dp" android:right="0dp" android:left="0dp" android:bottom="-5dp">
        <shape
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <stroke
                android:width="3dp"
                android:color="@color/white"></stroke>
            >
            <corners android:radius="4dip" />


        </shape>
    </item>

</layer-list>
